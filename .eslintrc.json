{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "preact", "prettier"],
  "plugins": ["prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-param-reassign": ["error", { "props": false }],
    "no-use-before-define": [
      "error",
      { "functions": false, "variables": false }
    ]
  },
  "ignorePatterns": ["dist/"]
}
